{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "server/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/public/$1"
    },
    {
      "src": "/",
      "dest": "server/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}